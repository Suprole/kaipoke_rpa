{
    "manifest_version": 3,
    "name": "カイポケアシスタント",
    "version": "1.0",
    "description": "カイポケの予実反映作業を自動化する拡張機能",
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://r.kaipoke.biz/*"
    ],
    "action": {
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "content_scripts": [
      {
        "matches": ["https://r.kaipoke.biz/*"],
        "js": ["contentScript.js"],
        "css": ["contentStyle.css"],
        "run_at": "document_start"
      }
    ]
  }